{
	"compilerOptions": {
		// basic
		"target": "ES2020",
		"module": "commonjs",
		"outDir": "target",
		"sourceMap": true,
		"strict": true,

		// additional checks
		"noUnusedLocals": true,

		// module resolution
		"baseUrl": "src",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"allowJs": true
	},
	"include": [
		"src/**/*.ts"
	],
}
