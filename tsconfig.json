{
	"compilerOptions": {
		// basic
		"target": "ES2020",
		"module": "commonjs",
		"outDir": "target/src",
		"sourceMap": true,
		"strict": true,

		// additional checks
		"noUnusedLocals": true,

		// module resolution
		"baseUrl": "src",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"esModuleInterop": true
	}
}
